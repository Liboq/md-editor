{
  "id": "juejin-style",
  "name": "掘金风格",
  "description": "掘金社区文章风格主题",
  "isBuiltIn": false,
  "styles": {
    "background": "#ffffff",
    "text": "#252933",
    "textSecondary": "#8a919f",
    "h1": {
      "color": "#1d2129",
      "fontSize": "1.8em",
      "fontWeight": "700",
      "lineHeight": "1.5",
      "marginTop": "1.5em",
      "marginBottom": "1em",
      "borderBottom": "1px solid #e4e6eb",
      "paddingBottom": "0.5em"
    },
    "h2": {
      "color": "#1d2129",
      "fontSize": "1.5em",
      "fontWeight": "700",
      "lineHeight": "1.5",
      "marginTop": "1.5em",
      "marginBottom": "0.8em",
      "borderBottom": "1px solid #e4e6eb",
      "paddingBottom": "0.4em"
    },
    "h3": {
      "color": "#1d2129",
      "fontSize": "1.25em",
      "fontWeight": "600",
      "lineHeight": "1.5",
      "marginTop": "1.2em",
      "marginBottom": "0.6em"
    },
    "h4": {
      "color": "#1d2129",
      "fontSize": "1.1em",
      "fontWeight": "600",
      "lineHeight": "1.5",
      "marginTop": "1em",
      "marginBottom": "0.5em"
    },
    "h5": {
      "color": "#1d2129",
      "fontSize": "1em",
      "fontWeight": "600",
      "lineHeight": "1.5",
      "marginTop": "1em",
      "marginBottom": "0.5em"
    },
    "h6": {
      "color": "#8a919f",
      "fontSize": "0.9em",
      "fontWeight": "600",
      "lineHeight": "1.5",
      "marginTop": "1em",
      "marginBottom": "0.5em"
    },
    "paragraph": {
      "color": "#252933",
      "fontSize": "16px",
      "lineHeight": "1.75",
      "marginBottom": "1.25em"
    },
    "link": {
      "color": "#1e80ff",
      "textDecoration": "none"
    },
    "blockquote": {
      "background": "#f7f8fa",
      "borderLeft": "4px solid #1e80ff",
      "color": "#515767",
      "padding": "16px 20px",
      "margin": "1.2em 0",
      "fontStyle": "normal"
    },
    "code": {
      "background": "#fff5f5",
      "color": "#ff502c",
      "padding": "3px 6px",
      "borderRadius": "4px",
      "fontFamily": "Menlo, Monaco, Consolas, monospace",
      "fontSize": "0.87em"
    },
    "codeBlock": {
      "background": "#282c34",
      "color": "#abb2bf",
      "padding": "20px 24px",
      "borderRadius": "8px",
      "fontFamily": "Menlo, Monaco, Consolas, monospace",
      "fontSize": "0.87em",
      "lineHeight": "1.6",
      "overflow": "auto"
    },
    "list": {
      "color": "#252933",
      "marginLeft": "1.5em",
      "marginBottom": "1.25em",
      "lineHeight": "1.75"
    },
    "table": {
      "borderColor": "#e4e6eb",
      "headerBackground": "#f7f8fa",
      "headerColor": "#1d2129",
      "cellPadding": "12px 16px",
      "evenRowBackground": "#fafbfc"
    },
    "image": {
      "maxWidth": "100%",
      "borderRadius": "8px",
      "margin": "1.2em 0"
    },
    "hr": {
      "border": "1px solid #e4e6eb",
      "margin": "2em 0"
    }
  }
}
